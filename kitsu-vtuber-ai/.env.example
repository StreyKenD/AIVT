# Core runtime --------------------------------------------------------------
PYTHONUTF8=1
LOG_LEVEL=INFO
KITSU_LOG_ROOT=logs

# Orchestrator --------------------------------------------------------------
ORCH_HOST=127.0.0.1
ORCH_PORT=8000
ORCH_CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
TELEMETRY_API_URL=http://127.0.0.1:8001
TELEMETRY_API_KEY=
ORCHESTRATOR_URL=http://127.0.0.1:8000
