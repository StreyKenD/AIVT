# Debug configuration for running the pipeline locally without external integrations.
# Load these overrides before starting the pipeline to simplify debugging.

# Verbose logging for all services
LOG_LEVEL=DEBUG

# Consolidate logs under the repo-level logs directory
KITSU_LOG_ROOT=F:/code/projects/AIVT/logs

# Skip integrations that require external apps/credentials
PIPELINE_DISABLE=avatar_controller,obs_controller,twitch_ingest

# Use synthetic audio instead of the real microphone
ASR_FAKE_AUDIO=1
ASR_DEVICE=cpu

# Make the policy worker fail fast when Ollama misbehaves
POLICY_RETRY_ATTEMPTS=0
POLICY_STREAM_TIMEOUT=15
POLICY_URL=http://127.0.0.1:8081

# Spawn Ollama alongside the pipeline and skip reachability checks
OLLAMA_AUTOSTART=1
PIPELINE_SKIP_OLLAMA_CHECK=1

# Force silent TTS so you don't need Coqui/Piper while debugging
TTS_DISABLE_COQUI=1
TTS_DISABLE_PIPER=1
TTS_HOST=0.0.0.0
TTS_PORT=8070
TTS_API_URL=http://127.0.0.1:8070

# Keep the family-friendly filter enabled but override as needed
POLICY_FAMILY_FRIENDLY=1
